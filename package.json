{
  "name": "@oopsunome/gitin",
  "bin": {
    "gitin": "esm/main.js"
  },
  "main": "esm/gitin.js",
  "scripts": {
    "cli": "yarn build > /dev/null && DEBUG=GITIN:cli ./esm/main.js -n ./test",
    "build": "npx babel-node ./scripts/clean-built && npx babel-node ./scripts/build",
    "clean": "npx babel-node ./scripts/clean",
    "license": "npx babel-node ./scripts/license",
    "reprepare": "npx babel-node ./scripts/re-prepare",
    "changelog": "npx auto-changelog -p",
    "lint": "npx eslint --cache ."
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "files": [
    "src/**/*.js",
    "esm/**/*.js"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10.13.0"
          }
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "benchmark/**",
    "docs/**",
    "*-test.js",
    "esm/**",
    "build/**",
    "lib/**",
    ".github/**",
    ".gitlab/**",
    ".vscode/**",
    "scripts/**",
    "test/**"
  ],
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "changelog-template.hbs",
    "unreleased": true,
    "commitLimit": false,
    "includeBranch": [
      "master"
    ]
  },
  "git": {
    "core.editor": "code"
  },
  "gitignore": [
    "macOS",
    "Windows",
    "Linux",
    "Node",
    "VisualStudioCode",
    "SublimeText",
    "CVS",
    "Diff",
    "Vim",
    "TortoiseGit",
    "Diff",
    "Patch"
  ],
  "dependencies": {
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "deepmerge": "^4.0.0",
    "fast-deep-equal": "^2.0.1",
    "gradient-string": "^1.2.0",
    "lodash": "^4.17.15",
    "make-dir": "^3.0.0",
    "meow": "^5.0.0",
    "nodegit": "^0.25.1",
    "p-map": "^3.0.0",
    "trash": "^6.0.0",
    "update-notifier": "^4.0.0"
  },
  "description": "初始化 Git 项目。",
  "private": false,
  "version": "1.1.0",
  "author": {
    "name": "iyowei",
    "email": "swzyocowboy@icloud.com",
    "url": "https://github.com/iTonyYo"
  },
  "keywords": [
    "git",
    "初始化",
    "init",
    "脚手架",
    "scaffold",
    "生成器",
    "generator",
    "工具",
    "tool",
    "cli",
    "oopsunome"
  ],
  "repository": {
    "url": "https://github.com/iTonyYo/gitin.git",
    "type": "git"
  },
  "homepage": "https://github.com/iTonyYo/gitin",
  "bugs": "https://github.com/iTonyYo/gitin/issues",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "auto-changelog": "^1.16.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "execa": "^2.0.4",
    "fast-glob": "^3.0.4",
    "license-checker": "^25.0.1",
    "listr": "^0.14.3",
    "tokei-js": "^1.0.3"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
